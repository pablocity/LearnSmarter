<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:effects="clr-namespace:LearnSmarter.Mobile.Forms.UI.Effects"
    xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    xmlns:sf="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LearnSmarter.Mobile.Forms.UI.Views"
    x:Class="LearnSmarter.Mobile.Forms.UI.Views.HomeView">


    <StackLayout Orientation="Vertical" BackgroundColor="#f6f6f6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="10*"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3"></ColumnDefinition>
                <ColumnDefinition Width="20*"></ColumnDefinition>
                <ColumnDefinition Width="3"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                <Label VerticalOptions="Center" HorizontalOptions="Start" Margin="5" FontSize="15" Text="Twoje cele"></Label>
                <Button HorizontalOptions="EndAndExpand" Margin="5, 0, 5, 0" TextColor="White" Text="Sortuj" BackgroundColor="#4b6584"></Button>
            </StackLayout>


            <ListView effects:CornerRadiusEffect.CornerRadius="25" Grid.Row="1" Grid.Column="1" HasUnevenRows="True" BackgroundColor="#e3e3e3" ItemsSource="{Binding Collection}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell IsEnabled="False">
                            <Grid BackgroundColor="#dadada" Margin="0, 0, 0, 10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="20"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"></ColumnDefinition>
                                    <ColumnDefinition Width="8*"></ColumnDefinition>
                                    <ColumnDefinition Width="7*"></ColumnDefinition>
                                    <ColumnDefinition Width="28"></ColumnDefinition>
                                    <ColumnDefinition Width="32"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <BoxView Grid.Row="0" Grid.RowSpan="3" BackgroundColor="#5bb85d"></BoxView>
                                <BoxView Margin="-6, 0, 0, 0" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" BackgroundColor="#686de0"></BoxView>
                                <Button Margin="0, 0, 5, 0" VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="#dadada" Grid.Row="1" Grid.Column="3" HeightRequest="30" Image="edit.png"></Button>
                                <Button Margin="5, 0, 10, 0" VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="#dadada" Grid.Row="1" Grid.Column="4" HeightRequest="30" Image="down_arrow_smaller.png"></Button>
                                <BoxView Margin="-6, 0, 0, 0" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" BackgroundColor="#c7c7c7"></BoxView>
                                <Label VerticalOptions="Center" FontSize="16" TextColor="Black" Margin="0" Grid.Row="1" Grid.Column="1" Text="{Binding Name}" HorizontalTextAlignment="Center" ></Label>
                                <Label VerticalOptions="Center" HorizontalTextAlignment="Center" FontSize="15" Margin="-5, 0, 0, 0" Grid.Row="1" Grid.Column="2" Text="{Binding Deadline, StringFormat='{}{0:dd/MM/yyyy}'}"></Label>
                                <Label TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center" FontSize="13" Grid.Row="2" Grid.Column="1" Text="Left 16 days"></Label>
                                <Label TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center" FontSize="13" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" Text="Następna powtórka za 5 dni"></Label>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button effects:CornerRadiusEffect.CornerRadius="45" Grid.Row="2" Grid.Column="1" Command="{Binding AddLSCommand}" Text="Dodaj Learning Subject"></Button>
        </Grid>
        
    </StackLayout>

    
</views:MvxContentPage>